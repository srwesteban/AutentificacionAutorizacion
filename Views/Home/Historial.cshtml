@model List<AutentificacionAutorizacion.Models.Registro>
@{
    ViewBag.Title = "Historial";
}
<style>
    .historial {
        position: fixed;
        top: 55px;
        left: 0;
        padding: 20px;
        width: 100%;
        height: 100%;
        background-color: rgba(248, 249, 250, 0.9);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 0;
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .historial-content {
        max-width: 600px;
        width: 100%;
        overflow: auto; /* Agregamos desplazamiento en caso de contenido largo */
    }

    .table {
        color: black;
        width: 100%;
        border-collapse: collapse; /* Colapsa los bordes de las celdas */
        margin-top: 20px; /* Agregamos margen superior */
    }

        .table th,
        .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd; /* Agregamos línea divisoria entre filas */
        }

        .table th {
            text-align: left;
            background-color: #f2f2f2; /* Color de fondo para encabezados */
        }

    .btn-copy {
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-copy:hover {
            background-color: #0056b3;
        }

    .no-records {
        margin-top: 20px;
        text-align: center;
    }
</style>
<div class="historial">
    <h2>Historial</h2>
    <div class="historial-content">
        @if (Model != null && Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Fecha de Búsqueda</th>
                        <th>Coordenadas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registro in Model)
                    {
                        <tr>
                            <td>@registro.FechaBusqueda.ToString("dd/MM/yyyy hh:mm:ss tt")</td>
                            <td>@registro.Coordenadas</td>
                            <td>
                                <button class="btn btn-copy" data-clipboard-text="@registro.Coordenadas">Copiar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-records">No hay registros disponibles.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
    <script>
        var clipboard = new ClipboardJS('.btn-copy');
        clipboard.on('success', function (e) {
            alert('¡Coordenadas copiadas al portapapeles!');
            e.clearSelection();
        });
        clipboard.on('error', function (e) {
            alert('Error al copiar coordenadas. Por favor, seleccione manualmente y copie.');
        });
    </script>
}
