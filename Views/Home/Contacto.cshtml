@model AutentificacionAutorizacion.Models.Usuario
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto de Usuario</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        .contenido {
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px;
            width: 100%;
            height: 100%;
            background-color: rgba(248, 249, 250, 0.9);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .titulo {
            margin-bottom: 20px;
            font-size: 24px;
            text-align: center;
        }

        form {
            width: 100%;
            max-width: 400px; /* Ancho máximo del formulario */
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 16px;
        }

        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: none; /* Evita que se redimensione */
            height: 150px; /* Altura fija */
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007bff; /* Color de fondo azul */
            color: #ffffff; /* Texto en blanco */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Efecto de transición */
        }

            input[type="submit"]:hover {
                background-color: #0056b3; /* Cambia el color al pasar el mouse */
            }
    </style>
</head>
<body>

    <div class="contenido">
        <h2 class="titulo">Contacto de Usuario</h2>
        <h3>De: @Model.Nombre</h3> <!-- Muestra el nombre del usuario -->

        @using (Html.BeginForm("Contact", "ControllerName", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <label for="mensaje"><i class="fas fa-envelope"></i> Mensaje:</label>
            <textarea id="mensaje" name="mensaje" placeholder="Escribe tu mensaje aquí..."></textarea>

            <input type="submit" value="Enviar" />
        }
    </div>

</body>
</html>
