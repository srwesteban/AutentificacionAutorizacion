﻿
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <link href="~/Estilos/LoginRegistro.css" rel="stylesheet" />

</head>
<body class="nada">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-header text-center">
                        <img src="~/Estilos/Imagenes/Logos/logopetmap.png" class="img-fluid" alt="Logo">
                    </div>
                    <div class="card-body">

                        <form action="@Url.Action("Login","Inicio")" method="post">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="email" class="form-control" name="correo" required placeholder="Correo" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" name="clave" required placeholder="Contraseña">
                                </div>
                            </div>
                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.Mensaje
                                </div>
                            }
                            <div class="form-group">
                                <button type="submit" id="submitBtn" class="btn btn-primary btn-block">Iniciar Sesión</button>
                            </div>
                            <div class="mb-3">
                                <div class="d-grid">
                                    <a class="btn btn-secondary btn-block" href="@Url.Action("Index", "Invitado")">Ingresar como invitado</a>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <div style="color:white">
                                    No tienes cuenta? registrate <a href="@Url.Action("Registrar","Inicio")" style="color: #FFC312;">Aqui</a>
                                    <br />
                                    Has olvidado tu contraseña? recuperala <a href="@Url.Action("Restablecer","Inicio")" style="color: #FFC312;">Aqui</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
        @Scripts.Render("~/bundles/bootstrap")
</body>
</html>